#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int gcdd(int a, int b) {
  
        if(a==0)return b;
        if(b==0)return a;
        if(a==b)return a;
        
        if(a > b){
            return gcd(a-b, b);
        }
        else{
            return gcd(a, b-a);
        }
}

int main() {
	// your code goes here
	ios_base::sync_with_stdio(false);
    cin.tie(NULL);

int t;
cin>>t;
while(t--){
    ll n;
    cin>>n;
    ll maxval=0;
    ll k=0;
    vector<ll>v(n);
    for(ll i=0;i<n;i++)
    cin>>v[i];
    for(ll i=0;i<n;i++){
        for(ll j=0;j<n;j++){
            
            ll x=v[i] ^ v[j];
            ll y=v[i] & v[j];
            ll g=gcdd(x,y);
            if(g>maxval){
                maxval=g;
                k=1;
            }
            else if(g==maxval)
            k++;
                
            
        
        
            
        }
    }
    cout<<maxval<<" "<<k<<endl;
}
}
