#include<bits/stdc++.h>
using namespace std;

typedef long long ll;
typedef vector<int> vi;
typedef vector<ll> vl;


int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int tc;cin>>tc;

    while( tc-- ){

        int n,m; cin>>n>>m;

        vector<int>chemi(n);
        for(int i=0; i<n; i++){
            cin>>chemi[i];
        }

        vector<vector<int>> rules(m, vector<int>(3));

        for(int i=0; i<m; i++)
        {
            for(int j=0; j<3; j++){
                cin>>rules[i][j];
            }
        }

        cout<<n+m<<endl;
    }



  return 0;
}
