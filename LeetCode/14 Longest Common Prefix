class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        string res = "";

        sort(strs.begin(), strs.end()); // string are lexicographically sorted
        int sz = strs.size();

        string s1 = strs[0];
        string s2 = strs[sz-1];

        for(int i=0; i<s1.size(); i++){
            if(s1[i]==s2[i])
                    res+=s1[i];
            else
              break;
        }

        return res;        
    }
};
